# ChatMe App Environment Variables Template
# Copy this file to .env and fill in your actual values

# WebSocket URL for backend connection
# Development: ws://localhost:8787
# Production: wss://your-worker.workers.dev
WEBSOCKET_URL=wss://your-backend-url.workers.dev

# API Key for backend authentication
API_KEY=your-api-key-here

# Reconnection settings (in milliseconds)
RECONNECT_INTERVAL=3000
MAX_RECONNECT_ATTEMPTS=5

# Ping/pong settings for keep-alive (in milliseconds)
PING_INTERVAL=30000
